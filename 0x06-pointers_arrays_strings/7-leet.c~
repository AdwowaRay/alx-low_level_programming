#include "main.h"
/**
 *leet - encodes a string into 1337.
 *@a: array
 *Return: a pointer to the changed string
 */
char *leet(char *)
{
	int i, j;
	char sl[] = "aAeEoOtTlL";
	char sv[] = "4433007711";

	for (i = 0; a[i] != '\0'; i++)
	{
		for (j = 0; j < 10; j++)
		{
			if (a[i] == sl[j])
				a[i] = sv[j];
		}
	}
	return (a);
}
